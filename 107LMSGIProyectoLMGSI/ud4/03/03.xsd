<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <!-- Declaracion de elmento complejo : tipolenguaje-->
    <xs:complexType name="tipolenguage">
    <xs:sequence>
    <xs:element name="description" type="xs:string"></xs:element>
    <xs:element name="example" type="xs:string"></xs:element>
    </xs:sequence>
    <xs:attribute name="name" type="xs:string"></xs:attribute>
    </xs:complexType>
    <!-- Declaracion de elmentro raiz-->
    <xs:element name="root-element">
        <xs:complexType>
        <xs:sequence><xs:element name="language" type="tipolenguage" maxOccurs="unbounded"/>
        </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>